<%= form_with model: comment, url: "/users/#{@user.id}/posts/#{post.id}/create_comment", local: true do |form|%>
  <%= form.hidden_field :user_id, value: current_user.id%>
  <%= form.hidden_field :post_id, value: post.id%>
  <div class='field'>
    <%= form.text_field :text, size: '50x1'%>
    <span class='actions'>
      <%= form.submit 'Comment'%>
    </span>
  </div>

   <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>
<%end%>